<%= render 'userinfo', user: @user, book: @book %>

<% @books.each do |book| %>

<div>
  <h1>Books</h1><br>
  <h6>Title</h6>
  <h6>Opinion</h6>

  <%= image_tag book.user.get_profile_image(100,100) %>
  <%= link_to book_path(book.id) do %>
  <p>Title：<%= book.title %></p>
  <% end %>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>