<%= render 'books/userinfo', user: @user_info, book: @book_new %>



<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <% end %>
  <p>Name：<%= book.user.name %></p>
  <p>Introduction：<%= book.user.introduction %></p>
</div>
<% end %>

