<div>
 <h3><%= @user.name %></h3>
  <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <% end %>
  <p>Name：<%= book.user.name %></p>
  <p>Introduction：<%= book.user.introduction %></p>
</div>
<% end %>

